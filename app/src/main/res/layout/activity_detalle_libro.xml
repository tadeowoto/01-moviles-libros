<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8F3CE"
    tools:context=".DetalleLibroActivity">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardLibro"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:elevation="6dp"
        app:cardCornerRadius="16dp"
        app:cardBackgroundColor="@android:color/background_dark"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp"
            android:gravity="center_horizontal"
            android:background="#DDDAD0"
            >

            <ImageView
                android:id="@+id/imagenLibro"
                android:layout_width="160dp"
                android:layout_height="240dp"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                android:contentDescription="@string/app_name"
                android:layout_marginBottom="16dp"/>

            <TextView
                android:id="@+id/tituloLibro"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Título del Libro"
                android:textAppearance="@style/TextAppearance.Material3.TitleLarge"
                android:textColor="#57564F"
                android:textStyle="bold"
                android:paddingBottom="8dp"/>

            <TextView
                android:id="@+id/autorLibro"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Autor"
                android:textAppearance="@style/TextAppearance.Material3.BodyMedium"
                android:textColor="#7A7A73"
                android:paddingBottom="4dp"/>

            <TextView
                android:id="@+id/paginasLibro"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Páginas: 0"
                android:textAppearance="@style/TextAppearance.Material3.BodySmall"
                android:textColor="#7A7A73"/>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <androidx.core.widget.NestedScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="16dp"
        app:layout_constraintTop_toBottomOf="@id/cardLibro"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/descripcionLibro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:lineSpacingExtra="2dp"
            android:padding="16dp"
            android:text="Descripción del libro..."
            android:textAppearance="@style/TextAppearance.Material3.BodyMedium"
            android:textColor="#57564F" />
    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
